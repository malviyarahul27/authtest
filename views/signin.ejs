<%- include('./partials/header')%>

  <div class="signup w-full h-4/5 flex justify-center items-center ">
    <div class="w-full bg-black/30 backdrop-blur-lg rounded-lg shadow mt-20  sm:max-w-md xl:p-0 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1
          class="text-xl text-center font-semibold leading-tight tracking-tight text-gray-50 md:text-2xl dark:text-gray-100">
          Login account
        </h1>
        <form class="space-y-4 md:space-y-6" action="/users/signin" method="post">
          <div>
            <label for="username" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Username</label>
            <input type="username" name="username" id="username" placeholder="John Dow"
              class="bg-gray-50 border border-gray-300 text-gray-50 text-sm rounded-lg w-full p-3 bg-transparent dark:border-gray-600 ">
          </div>
          <div>
            <label for="password" class="mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
            <input type="password" name="password" id="password" placeholder="••••••••"
              class="bg-gray-50 border border-gray-300 text-gray-50 text-sm rounded-lg w-full p-3 bg-transparent dark:border-gray-600 "
              required="">
          </div>
          <button type="submit"
            class="w-full p-2 bg-gray-900 text-white  font-medium rounded-lg text-sm px-5 py-2.5 ">LOGIN</button>
          <p class="text-sm font-light text-gray-200">
            Not have an account? <a href="/users/signin"
              class="font-medium text-primary-600 hover:underline dark:text-primary-500">REGISTER</a>
          </p>
        </form>
      </div>
    </div>
  </div>












  <%- include('./partials/footer')%>